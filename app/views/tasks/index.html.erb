<h1>Browse our Tasks</h1>

<ul id="tasks">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="fa fa-square-o"></i>
      <% else %>
        <i class="fa fa-check-square-0"></i>
      <% end %>
    <%= link_to task.title, task_path(task.id) %>
    .
    <% link_to task_path(task.id), methos: :delete, data: { confirm: "Delete #{task.title}?" } do %>
      <i class="fa fa-trash-o" aria-hidden="true"></i>
    <% end %>
    </li>
  <% end %>
</ul>

